<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jakewharton.hanselandgretel.sample"
    android:versionCode="3"
    android:versionName="1.0.2">

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="15" />

    <application
        android:label="Hansel and Gretel Sample"
        android:icon="@drawable/icon">

        <activity
            android:name=".ListSamples"
            android:label="Hansel and Gretel">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
        
        <activity
            android:name=".SampleDefaultDark"
            android:label="Default (Dark)"
            android:theme="@style/Theme.HanselAndGretel.DefaultDark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.jakewharton.hanselandgretel.SAMPLE" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".SampleDefaultLight"
            android:label="Default (Light)"
            android:theme="@style/Theme.HanselAndGretel.DefaultLight">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.jakewharton.hanselandgretel.SAMPLE" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".SampleStyled"
            android:label="Styled"
            android:theme="@style/Theme.HanselAndGretel.CustomStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.jakewharton.hanselandgretel.SAMPLE" />
            </intent-filter>
        </activity>
        
    </application>
</manifest>
